<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="220dp"
        android:layout_height="193dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/iiiiiiiiiiiiiiiiiii" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="130dp"
        android:layout_height="58dp"
        android:background="@android:drawable/btn_default"
        android:gravity="center"
        android:text="  Tempo da aplicação:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.521" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="129dp"
        android:layout_height="61dp"
        android:background="@android:drawable/btn_default"
        android:gravity="center"
        android:text="Valor inicial da aplicação:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="193dp"
        android:layout_height="82dp"
        android:text="CALCULAR"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799" />

    <EditText
        android:id="@+id/edtResultado"
        android:layout_width="226dp"
        android:layout_height="77dp"
        android:backgroundTint="@color/white"
        android:drawableTint="@color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="Resultado"
        android:inputType="none"
        android:shadowColor="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <EditText
        android:id="@+id/edtMensal"
        android:layout_width="219dp"
        android:layout_height="51dp"
        android:background="?android:attr/fastScrollTrackDrawable"
        android:ems="10"
        android:hint="  Ex: 100.00"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:numeric="decimal"
        android:textColor="@color/white"
        android:textColorHint="@android:color/system_neutral2_300"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="130dp"
        android:layout_height="56dp"
        android:background="@android:drawable/btn_default"
        android:gravity="center"
        android:text="Aplicação mensal:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <EditText
        android:id="@+id/edtTaxa"
        android:layout_width="221dp"
        android:layout_height="48dp"
        android:background="?android:attr/fastScrollTrackDrawable"
        android:ems="10"
        android:hint="  Ex: 0.02"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:numeric="decimal"
        android:shadowColor="@android:color/system_neutral2_300"
        android:textColor="@android:color/system_neutral2_300"
        android:textColorHighlight="@android:color/system_neutral2_300"
        android:textColorHint="@android:color/system_neutral2_300"
        android:textColorLink="@android:color/system_neutral2_300"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619" />

    <EditText
        android:id="@+id/edtTempo"
        android:layout_width="221dp"
        android:layout_height="48dp"
        android:background="?android:attr/fastScrollTrackDrawable"
        android:ems="10"
        android:hint="  Em meses"
        android:inputType="numberDecimal"
        android:numeric="decimal"
        android:textColor="@color/white"
        android:textColorHint="@android:color/system_neutral2_300"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="131dp"
        android:layout_height="57dp"
        android:background="@android:drawable/btn_default"
        android:gravity="center"
        android:text="Taxa:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.039"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="307dp"
        android:layout_height="38dp"
        android:text="Calcule o seu investimento"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236" />

    <EditText
        android:id="@+id/edtValor"
        android:layout_width="219dp"
        android:layout_height="59dp"
        android:background="?android:attr/fastScrollTrackDrawable"
        android:ems="10"
        android:hint="Valor em R$. Ex: 1200.00"
        android:inputType="numberDecimal"
        android:numeric="decimal"
        android:textColor="@color/white"
        android:textColorHint="@android:color/system_neutral2_300"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315" />

</androidx.constraintlayout.widget.ConstraintLayout>